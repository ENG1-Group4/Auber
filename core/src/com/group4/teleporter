    public Teleporter (AuberGame game){
        this.game = game;
    }

    @Override
    public void create(){
        stage = new Stage(new ExtendViewport(Gdx.graphics.getWidth(),Gdx.graphics.getHeight()));
        Gdx.input.setInputProcessor(stage);

        Table table = new Table();
        table.setFillParent(true);

        Button Button1 = new TextButton("teleporter1", game.skin);
        table.add(Button1).set(Gdx.graphics.getWidth()/2,(Gdx.graphic.getHeight()-Gdx.graphics.getHeight()/4);

        Button Button2 = new TextButton("teleporter2", game.skin);
        table.add(Button2).set(Gdx.graphics.getWidth()/2,(3*Gdx.graphics.getHeight())/4);

        Button Button3 = new TextButton("teleporter3", game.skin);
        table.add(Button3).set(Gdx.graphics.getWidth()/2,(2*Gdx.graphics.getHeight())/4);
        
        Button Button4 = new TextButton("teleporter4", game.skin);
        table.add(Button4).set(Gdx.graphic.getWidth()-(Gdx.graphics.getWidth()/2),Gdx.graphics.getHeight()/4)
        
        Button Button5 = new TextButton("teleporter5", game.skin);
        table.add(Button5).set(Gdx.graphics.getWidth()-Gdx.graphics.getWidth()/2,(Gdx.graphic.getHeight()-Gdx.graphics.getHeight()/4);

        Button Button6 = new TextButton("teleporter6", game.skin);
        table.add(Button6).set(Gdx.graphics.getWidth()-Gdx.graphics.getWidth()/2,(3*Gdx.graphics.getHeight())/4);

        Button Button7 = new TextButton("teleporter7", game.skin);
        table.add(Button7).set(Gdx.graphics.getWidth()-Gdx.graphics.getWidth()/2,(2*Gdx.graphics.getHeight())/4);
        
        Button Button8 = new TextButton("teleporter8", game.skin);
        table.add(Button8).set(Gdx.graphics.getWidth()-Gdx.graphics.getWidth()/2,Gdx.graphics.getHeight()/4)
        
        

    
        Button1.addListener(new ClickListener() {
            @Override
            public void clicked(InputEvent event, float x, float y,int pointer, int button) {
                
            }
        });
    


    private void MoveToAction(Teleporter1){
        
